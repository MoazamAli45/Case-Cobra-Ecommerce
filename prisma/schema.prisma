generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

enum CaseColor {
  black
  blue
  rose
}


model configuration {
  id String @id @default(cuid())
  imageUrl String
  width Int
  height Int
  color CaseColor?
  model PhoneModel?
  finish CaseFinish?
  croppedImageUrl String?
  material CaseMaterial?

}

